<resources>
    <!-- Base application theme. -->
    <style name="AppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/clBlack</item>
        <item name="colorPrimaryDark">@color/clMoreDarkBlue</item>
        <item name="colorAccent">@color/clLightBlue</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/clGray</item>
    </style>

    <style name="ToolBarTheme.ToolBarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/clWhite</item>
        <item name="android:textColor">@color/clWhite</item>
        <item name="android:textColorPrimaryInverse">@color/clWhite</item>
        <item name="android:iconTint">@color/clWhite</item>
    </style>

</resources>