<resources>
    <!-- Base application theme. -->
    <style name="AppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/clBlack</item>
        <item name="colorPrimaryDark">@color/clWhite</item>
        <item name="colorAccent">@color/clLightBlue</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/clGray</item>
    </style>

    <style name="MyActionBarTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorPrimary">@color/clBlack</item>
    </style>

</resources>